<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

        <changeSet id="create-role-and-user-role-tables" author="aleksa">
            <createTable tableName="role">
                <column name="id" type="bigint" autoIncrement="true">
                    <constraints primaryKey="true" nullable="false" />
                </column>
                <column name="role_name" type="varchar(64)">
                    <constraints unique="true" nullable="false"/>
                </column>
            </createTable>

            <createTable tableName="user_role">
                <column name="user_id" type="bigint">
                    <constraints nullable="false" foreignKeyName="fk_user_id" references="user(id)" />
                </column>
                <column name="role_id" type="bigint">
                    <constraints nullable="false" foreignKeyName="fk_role_id" references="role(id)" />
                </column>
            </createTable>
        </changeSet>

</databaseChangeLog>